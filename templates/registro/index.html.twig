{% extends 'base.html.twig' %} {% block title %}Registrarse{% endblock %} {% block body %}
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <div class="card">
                <div class="card-header">Registrarse</div>
                <div class="card-body">
                    {{form(formulario)}}
                </div>
                <div class="card-footer">
                    {% for message in app.flashes('exitoso') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
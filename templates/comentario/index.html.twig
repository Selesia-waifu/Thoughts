{% extends 'base.html.twig' %} {% block title %}Comentar Publicacion{% endblock %} {% block body %}
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">

            {% for post in pensamientos %}
            <div class="card bg-dark text-light shadow-sm">
                <div class="card-header text-light shadow-sm">
                    <h5>Autor: {{post.nickname|upper}}</h3>
                        <p style="font-size: 12px;">{{post.fecha_pensamiento|date}}</p>
                        <h3 class="text-light">{{post.titulo|title}}</h3>
                </div>
                <div class="card-body text-light" style="background-color: rgb(61,60,68);">

                    <p>{{post.Contenido}}</p>
                </div>
                <div class="card-footer">
                    Comentarios: {% for comentario in comentarios %}
                    <div class="card bg-dark border-light">
                        <div class="card-header text-light">
                            {{comentario.nickname|upper}}:
                            <p>{{comentario.user_coment}}</p>
                            <p style="text-align:right;font-size:12px;">{{comentario.fecha_comentario|date}}</p>
                        </div>
                    </div>
                    <br> {% endfor %} {{form(comentar)}}
                </div>
            </div>
            <br> {% endfor %}
        </div>
    </div>
</div>
{% endblock %}